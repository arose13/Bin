<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/marginSmall"
    android:paddingBottom="@dimen/marginSmall"
    android:paddingRight="@dimen/margin"
    android:paddingLeft="@dimen/margin" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card"
        tools:ignore="UselessParent" >
        
        <ImageView
            android:id="@+id/textCard_Image"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:ignore="ContentDescription" />
        
        <TextView
            android:id="@+id/textCard_Title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/marginSmall"
            android:textSize="@dimen/textBody"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textCard_Body"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/marginSmall"
            android:paddingRight="@dimen/marginSmall"
            android:paddingTop="@dimen/marginSmall"
            android:paddingBottom="@dimen/margin"
            android:textSize="@dimen/textBody"
            android:textColor="@android:color/black"
            android:autoLink="web" />
        
    </LinearLayout>

</RelativeLayout>